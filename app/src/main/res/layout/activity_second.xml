<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    tools:context=".activity_second">


    <EditText
        android:id="@+id/inputMile"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="200dp"
        android:background="#009900"
        android:hint="Mile"
        android:padding="10dp"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/outputMile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/inputMile"
        android:background="#64DD17"
        android:padding="10dp"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/inputKilometer"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputMile"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:background="#009900"
        android:hint="Kilometer"
        android:padding="10dp"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/outputKilometer"
        android:layout_toRightOf="@id/inputKilometer"
        android:layout_below="@id/outputMile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:background="#64DD17"
        android:padding="10dp"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/outputKilometer"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="#F06292"
        android:onClick="back"/>


</RelativeLayout>